{% extends 'base.html.twig' %}
{% block body %}
<div>
    <form action={{path("addresident")}} method="POST">
        <h2>INGRESO RESIDENTE</h2><br/><br/>
        DPI: <input type="tel" name="DPI" placeholder="1234 12345 1234" 
        pattern="\d{4} \d{5} \d{4}|\d{13}" min="13" maxlength="15"/> <br/>
        Nombre: <input type="text" name="firstname"/><br/>
        Apellido: <input type="text" name="secondname"/><br/>
        Email: <input type="text" name="email"/><br/>
        Phone: <input type="tel" name="phone" placeholder="8888 8888" 
        pattern="\d{4}-\d{4}|\d{8}|\d{4} \d{4}" min="8" maxlength="9"/>
        <br/>
        <button type="reset">Limpiar</button> <br/>
        <button type="submit">Ingresar</button>
        <br/>
        <label style="color: red;font-weight: bold;">{{error}}</label>
    </form>
</div>
{% endblock %}