
{% extends 'base.html.twig' %}
{% block body %}
<!--Para mobiles-->
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!--Div para Imagen
<hgroup class="Titulo">
    <h1>Ingreso Hacienda Real</h1>
</hgroup>
-->
<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
        <div class="mdl-card mdl-shadow--2dp through mdl-shadow--16dp">
                <div class="row" id = "contenedor">
                 <div class="col-md-8">
                     <div class="mdl-card__media">
                        <img class="img" src="https://hdqwalls.com/wallpapers/black-green-material-design-hd.jpg">
                    </div>
                </div>
                <div class="col-md-4" id="datos">
                    <p class="titulo" size="3"><strong> Ingreso Nueva Hacienda</strong></p>

                        <form action={{path( "login")}} method="post">
                            <div class="mdl-card__supporting-text">
                                <!--Div para User y Pass-->
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    <input class="mdl-textfield__input" type="text" name="_username" id="user">
                                    <label class="mdl-textfield__label" for="user">Usuario</label>
                                </div>

                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    <input class="mdl-textfield__input" type="password" name="_password" id="password_user">
                                    <label class="mdl-textfield__label" for="password_user">Contrase√±a</label>
                                </div>
                            </div>
                            <!--Button-->
                            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary" align="right">
                                Ingresar
                            </button>
                        </form>
                </div>                
        </div>
    </div>
    
    <div class="col-md-3"></div>
</div>

{% endblock %}

{% block stylesheets %}
<style>
body {
    background: #263238;
}

.mdl-card{   
    align-items: center;
     width: 100%;
     height: 150%; 
     top: 50%;   
}

.img{
     width: 100%;
}

#datos{    
    align:center;
}
#contenedor{
    
    align:center;
}
</style>
{% endblock %}