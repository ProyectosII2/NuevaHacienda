{% extends 'base.html.twig' %}
{% block body %}
<!doctype html>
<div class = "container-fluid">
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6"> 
          <div class="mdl-card mdl-card--border mdl-shadow--16dp">
            <div class="row" id="contenedor"> 
                <div class="col-md-6">
                     <img class="img" src="http://www.nicolegibbonsstyle.com/wp-content/uploads/2016/06/Schlage-front-Door-Makeover-Hero-Gibbons.jpg">
                </div>               
                <div class="col-md-6">
                    <div id="data">
                        <form action={{path( "login")}} method="post">
                            <p class="titulo"><strong> <h6>{{"Ingreso Nueva Hacienda" | convert_encoding('ISO-8859-1', 'UTF-8')}}</h6></strong></p>
                            <!--Div para User y Pass-->
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="text" name="_username" id="user">
                                <label class="mdl-textfield__label" for="user">{{"Usuario" | convert_encoding('ISO-8859-1', 'UTF-8')}}</label>
                            </div>

                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="password" name="_password" id="password_user">
                                <label class="mdl-textfield__label" for="password_user">{{"Contrase√±a" | convert_encoding('ISO-8859-1', 'UTF-8')}}</label>
                            </div>
                            <br></br>
                            <!--Button-->
                            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary">
                                Ingresar
                            </button>
                            <p style="color:red;">{{error | convert_encoding('ISO-8859-1', 'UTF-8')}} </p>
                        </form>
                    </div>
                </div>
            </div>
          </div>
    </div>
    <div class="col-md-3"></div>
</div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
body {
    background: #607D8B;
}

.mdl-card{  
    top:25%; 
    text-align: center;    
    width: 100%;
    height:auto;     
}

.img{
    width: 100%;
    height:100%;
    object-fit: cover;
}

#data{
    padding-top: 25%; 
    top: 25%;   
    height:auto;
}

</style>
{% endblock %}
