{% extends 'base.html.twig' %}
{% block body %}
<!doctype html>
<div class = "container-fluid">
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6"> 
          <div class="mdl-card mdl-card--border mdl-shadow--16dp">
            <div class="row" id="contenedor"> 
                <div class="col-md-6">
                     <img class="img" src="http://www.nicolegibbonsstyle.com/wp-content/uploads/2016/06/Schlage-front-Door-Makeover-Hero-Gibbons.jpg">
                </div>               
                <div class="col-md-6">
                    <div class="mdl-card" id="data">
                        <form action={{path( "login")}} method="post">
                            <p class="titulo"><strong> <h6>Ingreso Nueva Hacienda</h6></strong></p>
                            <!--Div para User y Pass-->
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="text" name="_username" id="user">
                                <label class="mdl-textfield__label" for="user">Usuario</label>
                            </div>

                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="password" name="_password" id="password_user">
                                <label class="mdl-textfield__label" for="password_user">Contrase√±a</label>
                            </div>
                            <br></br>
                            <!--Button-->
                            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary">
                                Ingresar
                            </button>
                            <p style="color:red;">{{error}} </p>
                        </form>
                    </div>
                </div>
            </div>
          </div>
    </div>
    <div class="col-md-3"></div>
</div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
body {
    background: #263238;
}

.mdl-card{   
    text-align: center;    
    width: 100%;
    top:25%;  
    height:auto;     
}

.img{
    width: 100%;
    height:100%;
    object-fit: cover;
}

#data{
    top: 25%;   
    height:auto;
}

</style>
{% endblock %}
