{% extends 'baseNav.html.twig' %}

{% block body %}

<div class="container-fluid">
    <div class="row">      
        <div class="col-md-1"></div>
        <div class="col-md-10">  
            <div class="mdl-card mdl-card--border mdl-shadow--16dp">                       
             <div >
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable">
                <label class="mdl-button mdl-js-button mdl-button--icon" for="search">
                <i class="material-icons">search</i> 
                </label>

                <div class="mdl-textfield__expandable-holder mdl-js-textfield">
                <input class="mdl-textfield__input" type="text" id="search" onkeyup="myFunction()" placeholder="Buscar por Usuario">
                <label class="mdl-textfield__label" for="search"></label>
                </div>  
                </div>

                
                 {% if approle == "ROLE_ADMIN" %}         
                        <a class="mdl-navigation__link" href={{path("adduser")}} href="/adduser" style="float: right; padding-top:2%;">
                            <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">
                            <i class="material-icons">person_add</i>
                            </button>
                        </a>  
                {% endif %}
            </div> 
                <table class="mdl-data-table mdl-js-data-table" id="myTable" cellspacing="0" height="auto" max-width="100%" width="100%">
                    <thead>
                        <tr>
                            <th>USUARIO</th>
                            <th>EMAIL</th>
                            <th>ROL</th>
                            <th>STATUS</th>
                            {% if approle == "ROLE_ADMIN" %}
                            <th>EDITAR</th>
                            {% endif %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for i in usuarios|keys %}
                            <tr>
                                    <td> {{ usuarios[i]['username']}} </td>
                                    <td> {{ usuarios[i]['email']}} </td>
                                    <td> {{ usuarios[i]['role']}} </td>
                                    {% if usuarios[i]['isActive']== true %}
                                        <td> Activo </td>
                                    {% else %}
                                        <td> Deshabilitado </td>
                                    {% endif %}
                                    {% if approle == "ROLE_ADMIN" %}
                                    <td> 
                                    <a href="{{ url('updateuser',{'username': usuarios[i]['username']}) }}">
                                    <button type="submit" class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored">
                                            <i class="material-icons">edit</i>
                                        </button>
                                    </a>
                                    </td> 
                                    {% endif %}                        
                            </tr>
                            {% endfor %}                       
                    </tbody>
                </table>
            </div>   
        </div> 
        <div class="col-md-1"></div>
    </div>
</div>

{% endblock %}

{% block stylesheets %}
<style>
body {
    background: #F5F5F5;
}
.mdl-data-table{     
    table-layout: fixed;
}

.mdl-data-table th {
    background-color: rgb(0,150,136);
    color: #ffffff;
    overflow: hidden;
    table-layout: fixed;
}

.mdl-data-table td {
   overflow: hidden;
    table-layout: fixed;
   
}

.logo {
  max-width: 10%;
  height: auto;
  margin-top: 10px;
}

.mdl-card{       
    width: 100%;
    top:15%;
    height:auto;    
}

.mdl-button.mdl-button--accent:hover{
	background-color: #F8BBD0;
	color:#212121;
}
</style>
{% endblock %}

{% block javascripts %}
<script>
function myFunction() {
  var input, filter, table, tr, td, i;
  input = document.getElementById("search");
  filter = input.value.toUpperCase();
  table = document.getElementById("myTable");
  tr = table.getElementsByTagName("tr");
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[0];
    if (td) {
      if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }       
  }
}
</script>
{% endblock %}