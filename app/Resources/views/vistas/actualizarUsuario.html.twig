{% extends 'baseNav.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">    
	<div class="col-md-1"></div>
        <div class="col-md-10">
				<div class="mdl-card mdl-card--border mdl-shadow--16dp" id="contenido">
					<div class="row">                
						<div class="col-md-12">
						 <div align="left">
                        <a class="mdl-navigation__link" href={{path("allusers")}} href="/allusers" >
                            <button class="mdl-button mdl-js-button mdl-button--primary">
                            <i class="material-icons">keyboard_arrow_left</i>
                            </button>
                        </a>
                    </div>
							<form form action={{path("checkupdate")}} method="post">
							<input type="hidden" name="oldusername" value={{username}}>
								<p><strong> <h4>ACTUALIZAR USUARIO</h4></strong></p>
								<br></br>
									<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            		    <input class="mdl-textfield__input" type="text" name="newusername" value={{name}} id="user" readonly style="color:#757575;">
                                		<label class="mdl-textfield__label" for="user">Usuario</label>
                            		</div>

									<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
										<input class="mdl-textfield__input" type="mail" name="mail" value={{mail}} id="usermail">
                                		<label class="mdl-textfield__label" for="usermail">Correo</label>
									</div> 	

									<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
										<input class="mdl-textfield__input" type="mail" name="mailcheck" value={{mail}} id="mailcheck">
                                		<label class="mdl-textfield__label" for="mailcheck">Reingrese Correo</label>
									</div>						
																		

								<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    <select class="mdl-textfield__input" name="role" id="roluser">
                                    {% if rol[0] == "ROLE_ADMIN" %}
										<option value="ROLE_USER">Usuario</option>
										<option value="ROLE_ADMIN" selected="selected">Administrador</option>
										{% else %}
										<option value="ROLE_USER" selected="selected">Usuario</option>
										<option value="ROLE_ADMIN">Administrador</option>
										{% endif %}
                                    </select>
                                <label class="mdl-textfield__label" for="roluser">Rol</label>
                            </div> 

									{% if active %}
										<label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="habilitado">									
										<input type="checkbox" value="habilitado" name="habilitado" id="habilitado" class="mdl-checkbox__input" checked>
										<span class="mdl-checkbox__label">Habilitado</span>
										</label>
									{% else %}									 
										<label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="habilitado">									
										<input type="checkbox" value="habilitado" name="habilitado" id="habilitado" class="mdl-checkbox__input">
										<span class="mdl-checkbox__label">Habilitado</span>
										</label>								
									
									{% endif %}
									<br></br>
									<button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" type="submit">Guardar </button>
									<br></br>
									<label style="color:red">{{error | convert_encoding('ISO-8859-1', 'UTF-8')}}</label>							
							</form>	
						</div>
						<!--Button
						<div class="col-md-5">
							<img class="img" src="http://cdn.onlinewebfonts.com/svg/download_506119.png">					
						</div>
						-->
					</div>				
				</div>
		</div>
	<div class="col-md-1"></div>
	</div>
</div>	
{% endblock %}
{% block stylesheets %}
<style>
body {
    background: #F5F5F5;
}

.mdl-card{  
    text-align: center;   
	padding-left:5%;  
	padding-right:5%;   
    width: 100%;
    padding-top:3%;  
    height:auto;
}


.mdl-button.mdl-button--colored {
	width: 100%;
}

.mdl-button.mdl-button--accent {
	width: 100%;
}

.mdl-button.mdl-button--accent:hover{
	background-color: #F8BBD0;
	color:#212121;
}

.mdl-button.mdl-button--colored:hover{
	background-color: #B2DFDB;
	color:#212121;
}

.mdl-textfield{
	width: 100%;
}

.img{
    width: 100%;
    height:100%;
    object-fit: scale-down;
}
</style>
{% endblock %}